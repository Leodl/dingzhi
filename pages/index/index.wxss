/**index.wxss**/
@import '../template/template.wxss';
.firstpage .tip{
  margin-top: 10px;
}
.firstpage .tip text{
     display: block;
     text-align: center
}
.firstpage .tip text:nth-child(1){
    font-size: 17px;
    line-height: 30px;
}
.firstpage .tip text:nth-child(2){
    font-size: 12px;
    line-height: 20px;
    color: #787878;
}
.products{
  width: 100%;
  margin-top: 20px;
  overflow: hidden;
}
.products .list{
  position: relative;
  float: left;
  width: 50%;
  height: auto;
  box-sizing:border-box;
  padding: 0px 5px;
}
.products .list image{
  width: 100%;
  height: 200px;
}
.imgborder{
  border: 1px solid #d6a41d;
}
.icon-choose {
    display: none;
    width: 30px;
    height: 30px;
    background: url(http://qiniucdn.immatchu.com/image/shirt/icon-choose.png) no-repeat;
    background-size: 100%;
    position: absolute;
    top: 0px;
    right: 4px;
}
.products .list text{
  display: block;
}
.products .list text:nth-child(1){
   padding: 5px 2px 0px 5px;
    color: #333333;
    font-size: 15px;
    font-weight: 600;
}
.products .list text:nth-child(2){
    color: #979798;
    padding: 5px 2px 12px 5px;
    font-size: 12px;
}
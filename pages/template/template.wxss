/* pages/progress/progress.wxss */
.top .progress_main{
    width: 100%;
    padding-bottom: 10px;
    border-bottom: 1px solid #E3E3E3;
    box-shadow: 2px 1px 2px #E3E3E3;
   

} 
.top .progress_main .progress{
  width: 80%;
  margin: 0 auto;

}
.top .progress_main .progress text{
  font-size: 14px;
}
.foot{
  width: 100%;
  position: fixed;
  bottom: 0px;
}
 .footflag{
  height: 80px;
}
.foot button{
  width: 50%;
  display: inline-block;
}
.foot button:nth-child(2){
background: #43434a;
color: #ffffff;
}